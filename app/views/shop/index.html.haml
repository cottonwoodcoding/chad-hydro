%h2#shop_header.text-center
  Shop - All
#accordion.panel-group.text-center
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapseOne"}
          Categories
    #collapseOne.panel-collapse.collapse.out
      .panel-body
        .category
          %a{href: '#', value: 'All'} All
        - @categories.each do |key, value|
          .category
            %a{href: '#', value: key}
              = key.pluralize
#products.row.list-group
  = render(partial: 'products', locals: {products: @products})

