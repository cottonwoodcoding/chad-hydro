- products.each do |product|
  .item.col-md-3
    .thumbnail
      %img.group.list-group-image{:alt => "", :src => image_thumb(product.id)}
      .caption
        .product-title
          %a.group.inner.list-group-item-heading{href: product_url(product.id)}
            = product.title
        .body-container
          %p.group.inner.list-group-item-text.font-n
            = strip_tags product.body_html
            %a.readmore.hidden{:href => product_url(product.id)} read more
      .footer
        .row
          .col-xs-12.col-md-12
            %p.lead.text-success.font-n
              Price:
              = number_to_currency(product.variants.first.price)
          .col-xs-12.col-md-12
            - unless defined?(cart)
              %a.font-l.add_to_cart.btn.btn-primary.btn-sm.pull-right{:href => "/add_to_cart/#{product.id}/1"} Add To Cart
            %a.font-l.btn.btn-success.btn-sm.pull-right.button-margin{:href => product_url(product.id)} More Details
