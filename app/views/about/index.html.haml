.row
  %h2.text-center.font-m About Us
  .clearfix
  %hr
  .well.about-us.font-l
    = Setting.setting_value('about us')
  %hr
  .clearfix
- unless @featured_products.empty?
  .row
    .c-wrapper
      %h2.text-center.font-m Featured Products
      #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
        .carousel-inner
          - @featured_products.each_with_index do |product, index|
            - if index == 0
              .item.active
                %a{:href => product_url(product.id)}
                  %img{:src => image_thumb(product.id) }
                .carousel-caption.font-l
                  = product.title
            - else
              .item
                %a{:href => product_url(product.id)}
                  %img{:src => image_thumb(product.id) }
                .carousel-caption.font-l
                  = product.title
        %a.left.carousel-control{"data-slide" => "prev", href: "#carousel-example-generic", role: "button"}
          %span.glyphicon.glyphicon-chevron-left
        %a.right.carousel-control{"data-slide" => "next", href: "#carousel-example-generic", role: "button"}
          %span.glyphicon.glyphicon-chevron-right
