.sign-up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email, class: 'col-sm-2 control-label'
      = f.email_field :email, {required: true, autofocus: true}
    .form-group
      = f.label :first_name, class: 'col-sm-2 control-label'
      = f.text_field :first_name, {required: true}
    .form-group
      = f.label :last_name, class: 'col-sm-2 control-label'
      = f.text_field :last_name, {required: true}
    .form-group
      = f.label :password, class: 'col-sm-2 control-label'
      = f.password_field :password, {required: true, autocomplete: "off"}
    .form-group
      = f.label :password_confirmation, class: 'col-sm-2 control-label'
      = f.password_field :password_confirmation, {required: true, autocomplete: "off"}
    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit "Sign up", {class: 'btn btn-sm btn-primary'}
        = render "devise/shared/links"
