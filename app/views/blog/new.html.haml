= link_to "Back", '/blog', class: 'font-l'
%h2.font-b Create new blog post
.post-container
  %form.form-horizontal{role: 'form', method: 'POST', action: '/blog/create'}
    = hidden_field_tag :authenticity_token, form_authenticity_token
    .form-group
      %label.control-lable.font-n{for: 'postTitle'} Title
      %input#postTitle.form-control{name: 'title', type: 'text', 'required' => 'true'}
    .form-group
      %textarea.tinymce{rows: 10, name: 'post_body'}
      = tinymce
    .form-group
      .btn-container
        %button.btn.btn-primary.pull-right.font-l{type: 'submit'} Submit
