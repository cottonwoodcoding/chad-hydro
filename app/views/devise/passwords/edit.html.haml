%h3.text-center.font-db Change your password
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put class: 'form-horizontal font-db'}) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  .form-group
    = f.label :password, "New password", class: 'col-sm-2 control-label'
    .col-sm-10
      = f.password_field :password, autofocus: true, {autocomplete: "off", class: 'form-control'}
  .form-group
    = f.label :password_confirmation, "Confirm new password", class: 'col-sm-2 control-label'
    .col-sm-10
      = f.password_field :password_confirmation, {autocomplete: "off", class: 'form-control'}
  .text-center
    %div= f.submit "Change my password", class: 'btn btn-success'
    %hr
    = render "devise/shared/links"